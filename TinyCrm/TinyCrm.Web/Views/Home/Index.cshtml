@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to TinyCrm</h1>
</div>

<div class="row">

    <!-- Customers table -->
    <div class="col-lg-6 col-md-12 col-sm-12">
        <h2>Customers</h2>
        <table class="customers table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">First name</th>
              <th scope="col">Last name</th>
              <th scope="col">Vat number</th>
              <th scope="col">Gross</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var c in Model.Customers) {
                <tr>
                  <th scope="row">@c.CustomerId</th>
                  <td>@c.Firstname</td>
                  <td>@c.Lastname</td>
                  <td>@c.VatNumber</td>
                  <td>@c.TotalGross</td>
                  <td>
                    <a class="nav-link" href="@Url.Action("Details", "Customer", new { id = c.CustomerId })">
                      Details
                    </a>
                  </td>
                </tr>
            }
          </tbody>
        </table>
        <h5>Total Customers: @Model.Customers.Count()</h5>
        <br />
    </div>

    <div class="col-lg-6 col-md-12 col-sm-12">
        <h2>Products</h2>
        <table class="products table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Price</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var p in Model.Products) {
                <tr>
                  <th scope="row">@p.ProductId</th>
                  <td>@p.Name</td>
                  <td>@p.Price</td>
                </tr>
            }
          </tbody>
        </table>
        <h5>Total Products: @Model.Products.Count()</h5>
        <br />
    </div>
</div>
